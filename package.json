{
  "name": "website",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview",
    "check": "npm run check:svelte && npm run check:lint && npm run check:format && npm run test",
    "check:format": "prettier --plugin-search-dir . --write .",
    "check:lint": "eslint .",
    "check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test": "npm run test:integration && npm run test:unit",
    "test:integration": "playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest"
  },
  "devDependencies": {
    "@floating-ui/dom": "^1.5.0",
    "@fontsource-variable/outfit": "^5.0.5",
    "@iconify/svelte": "^3.1.4",
    "@playwright/test": "^1.28.1",
    "@skeletonlabs/skeleton": "^1.10.0",
    "@sveltejs/adapter-vercel": "^4.0.0",
    "@sveltejs/kit": "^2.5.27",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/typography": "^0.5.9",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.45.1",
    "mdsvex": "^0.11.0",
    "postcss": "^8.4.24",
    "postcss-load-config": "^4.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "rehype-slug": "^5.1.0",
    "remark-toc": "^8.0.1",
    "remark-unwrap-images": "^3.0.1",
    "sass": "^1.64.2",
    "scrollama": "^3.2.0",
    "shiki": "^0.14.3",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-preprocess-import-assets": "^1.0.1",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.4.1",
    "typescript": "^5.5.0",
    "vite": "^5.4.4",
    "vitest": "^1.0.0"
  },
  "type": "module"
}
